@model List<GreenFlix.Models.Movie>

@{
    ViewData["Title"] = "Favorilerim";
}

<style>
    /* Aynı stiller kullanılabilir, sadece renk veya başlık değiştirilebilir */
    .watched-movies-page {
        background-color: #121212;
        min-height: 100vh;
        padding-top: 2rem;
        padding-bottom: 3rem;
    }

    .page-header {
        position: relative;
        text-align: center;
        margin-bottom: 2.5rem;
        padding-bottom: 1rem;
    }

    .page-title {
        font-family: 'Montserrat', sans-serif;
        font-weight: 700;
        color: #ffc107;
        display: inline-block;
        position: relative;
        padding: 0 1rem;
    }

        .page-title::before,
        .page-title::after {
            content: '⭐';
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
        }

        .page-title::before {
            left: -20px;
        }

        .page-title::after {
            right: -20px;
        }

    .movie-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
        gap: 1.5rem;
        padding: 0 1rem;
    }

    .movie-card {
        position: relative;
        cursor: pointer;
        overflow: hidden;
        border-radius: 8px;
        transition: all 0.3s ease;
        aspect-ratio: 2/3;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .movie-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        }

    .movie-poster {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .movie-card:hover .movie-poster {
        transform: scale(1.05);
    }

    .movie-info {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 15px;
        background: linear-gradient(to top, rgba(0,0,0,0.9), transparent);
        color: white;
        transform: translateY(100%);
        transition: transform 0.3s ease;
    }

    .movie-card:hover .movie-info {
        transform: translateY(0);
    }

    .movie-title {
        font-weight: 600;
        margin-bottom: 5px;
        font-size: 0.95rem;
    }

    .favorite-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #ffc107;
        color: black;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        z-index: 2;
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #6c757d;
    }

    .empty-state-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: #ffc107;
    }

    @@media (max-width: 768px) {
        .movie-grid {
            grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
            gap: 1rem;
        }

        .page-title {
            font-size: 1.5rem;
        }
    }
</style>

<div class="watched-movies-page">
    <div class="container">
        <div class="page-header">
            <h2 class="page-title">Favorilerim</h2>
        </div>

        @if (Model.Any())
        {
            <div class="movie-grid">
                @foreach (var movie in Model)
                {
                    <a href="@Url.Action("Details", "Movie", new { id = movie.Id })" class="movie-card">
                        <div class="favorite-badge">
                            <i class="fas fa-star"></i> Favori
                        </div>
                        <img src="@( !string.IsNullOrEmpty(movie.PosterUrl) ? movie.PosterUrl : "/images/default-poster.jpg" )"
                             alt="@movie.Title" class="movie-poster" />
                        <div class="movie-info">
                            <div class="movie-title">@movie.Title</div>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-star"></i>
                </div>
                <h3>Henüz favori filminiz yok</h3>
                <p>Favorilere eklediğiniz filmler burada listelenir.</p>
                <a href="@Url.Action("Index", "Movie")" class="btn btn-outline-warning mt-3">
                    <i class="fas fa-search"></i> Film Keşfet
                </a>
            </div>
        }
    </div>
</div>
